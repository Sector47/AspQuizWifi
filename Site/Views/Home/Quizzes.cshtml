@{
    ViewData["Title"] = "Quizzes";
}

<div class="text-center">
    <h1 class="display-4">Quizzes</h1>
        @{
            // From our model we get a 2darray
            string[,] quiz2dArray = Model as string[,];

            // We parse this array and for each row in it we ask for the quiz partial with the data from that one row.
            for (int i = 0; i < (quiz2dArray.Length / 3) - 1 && quiz2dArray[i,0] != null; i ++)
            {
                string[] quizArray = { quiz2dArray[i, 0], quiz2dArray[i, 1], quiz2dArray[i,2] };
                @Html.Partial("_Quiz", quizArray);
            }
        }
    <p>Enter quiz ID.</p>
    <p>Quiz question ??/??.</p>
    <p>Show quiz question(s). // Receive the first quiz quesion type, display it acccordingly. Go to next quiz question.</p>
    <p>Last question, submit. Submit quiz.</p>
    <p>See quiz grades.</p>
</div>

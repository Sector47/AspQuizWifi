@model Site.Models.QUESTION

@{
    ViewData["Title"] = "ModifyQuestions";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remove Question</h2>

<h3>Confirm Question Delete: <span class="warning">Are you sure you want to delete this Question?</span></h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Question ID: @Html.DisplayFor(model => model.QUE_ID)</dt>
        <dt>Question: @Html.DisplayFor(model => model.QUE_QUESTION)</dt>
        <dt>Answer: @Html.DisplayFor(model => model.QUESTION_ANSWER)</dt>
        <dt>Type: @Html.DisplayFor(model => model.TYPE_ID)</dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="form-actions no-color">
    <input type="submit" value="Yes, Delete Question" class="" /> |
    @Html.ActionLink("Back to List", "../ModifyQuestions/Index", new { id = Model.QUI_ID })
</div>
    }
</div>



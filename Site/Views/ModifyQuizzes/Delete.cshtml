@model Site.Models.QUIZ

@{
    ViewData["Title"] = "Delete Quiz";
}

@{
    // checks if model exists
    if (Model != null)
    {
        <h2>Remove Quiz</h2>

        <h3>Confirm Quiz Delete: <span class="warning">Are you sure you want to delete this Quiz?</span></h3>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>Quiz ID: @Html.DisplayFor(model => model.QUI_ID)</dt>
                <dt>Quiz Name: @Html.DisplayFor(model => model.QUI_NAME)</dt>
                <dt>Notes: @Html.DisplayFor(model => model.QUI_NOTES)</dt>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Yes, Delete Quiz" class="" /> |
                    @Html.ActionLink("Back to List", "Index" )
                </div>
            }
        </div>
    }
    else
    {
        // no model = not instructor, show proper permission message
        <h2>@ViewBag.PermissionMsg</h2>
    }
}


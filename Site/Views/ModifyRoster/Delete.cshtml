@model Site.Models.ROSTER

@{
    ViewData["Title"] = "Delete Roster";
}


@{
    // checks if model exists
    if (Model != null)
    {
        <h2>Remove Roster</h2>
        <h3>Are you sure you want to delete this roster?</h3>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>Roster ID: @Html.DisplayFor(model => model.ROSTER_ID)</dt>
                <dt>Course: @Html.DisplayFor(model => model.COURSE.COU_NAME)</dt>
                <dt>Username: @Html.DisplayFor(model => model.USER.USERNAME)</dt>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Yes, Delete Roster" class="btn buttonStyle" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    }
    else
    {
        // no model = not instructor, show proper permission message
        <h2>@ViewBag.PermissionMsg</h2>
    }
}
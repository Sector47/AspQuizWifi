@model Site.Models.ROSTER

@{
    ViewData["Title"] = "Delete Roster";
}


@{
    // checks if model exists
    if (Model != null)
    {
        <h2>Remove from Roster</h2>
        <h3>Confirm Remove: <span class="warning">Are you sure you want to delete this entry from the Roster?</span></h3>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <!--<dt>Roster ID: @Html.DisplayFor(model => model.ROSTER_ID)</dt>-->
                <dt>Student Username: @Html.DisplayFor(model => model.USER.USERNAME)</dt>
                <dt>Course Name: @Html.DisplayFor(model => model.COURSE.COU_NAME)</dt>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Yes, Delete from Roster" class="" /> |
                    @Html.ActionLink("Back to Roster", "Index")
                </div>
            }
        </div>
    }
    else
    {
        // no model = not instructor, show proper permission message
        <h2>@ViewBag.PermissionMsg</h2>
    }
}
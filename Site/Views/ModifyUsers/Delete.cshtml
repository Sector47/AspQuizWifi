@model Site.Models.USER

@{
    ViewData["Title"] = "Delete User";
}


@{
    // checks if model exists
    if (Model != null)
    {
        // display delete page
        <h2>Remove User</h2>
        <h3>Confirm Delete User: <span class="warning">Are you sure you want to delete this User?</span></h3>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>User ID: @Html.DisplayFor(model => model.USER_ID)</dt>
                <dt>First Name: @Html.DisplayFor(model => model.F_NAME)</dt>
                <dt>Last Name: @Html.DisplayFor(model => model.L_NAME)</dt>
                <dt>Is Instructor: @Html.DisplayFor(model => model.IS_INSTRUCTOR)</dt>
                <dt>Username: @Html.DisplayFor(model => model.USERNAME)</dt>
                <dt>Password: @Html.DisplayFor(model => model.PASSWORD)</dt>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Yes, Delete User" class="" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    }
    else
    {
        // no model = not instructor, show proper permission message
        <h2>@ViewBag.PermissionMsg</h2>
    }
}
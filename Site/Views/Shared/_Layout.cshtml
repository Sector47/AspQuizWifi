<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspMobileQuizOverWifi</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="wrapper">

        <header>
            <div id="nav">
                <nav>
                    <ul>
                        <li class="logoli">
                            <a class="logo" href="@Url.Action("Index", "Home", null)">MOBILE QUIZ<br /><span class="logosmall">over wi-fi</span></a>
                        </li>
                        <li>
                            @if (System.Web.HttpContext.Current.Session["UserSessionID"] != null && System.Web.HttpContext.Current.Session["User_isInstructor"].ToString() == "True")
                            {
                                <a class="buttonli" href="@Url.Action("Quizzes", "Home", null)">Preview Quizzes</a>
                            }
                            else
                            {
                                <a class="buttonli" href="@Url.Action("Quizzes", "Home", null)">Quizzes</a>
                            }
                        </li>
                        <li>
                            <a class="buttonli" href="@Url.Action("Account", "Home", null)">Account</a>
                        </li>


                        <!--Display login or logout depending on if the user is logged in-->
                        @if (System.Web.HttpContext.Current.Session["UserSessionID"] != null && System.Web.HttpContext.Current.Session["UserSessionID"].ToString() != "")
                        {

                            if (@System.Web.HttpContext.Current.Session["User_isInstructor"].ToString() == "True")
                            {
                                <li>  <a class="buttonli" href="@Url.Action("Modify", "Home", null)">Modify</a></li>
                            }

                            <li class="rightflex">
                                Logged in as: <span class="name">@System.Web.HttpContext.Current.Session["UserName"]<br /></span>
                                <a href="@Url.Action("LogOut", "Home", null)">Log Out</a>
                            </li>
                        }
                        else
                        {
                            <li class="rightflex">
                                <a href="@Url.Action("LogIn", "Home", null)">Log In</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </header>


        <div id="main">
            <main>
                @RenderBody()
            </main>
        </div>

        <footer>
            <div id="footer">
                &copy; 2020 - MobileQuizOverWifi - Aaron Clark - Johnathan DeLeeuw - Tyler Hammerseng - Haday Yang
            </div>
        </footer>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
